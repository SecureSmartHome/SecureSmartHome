<!--@Phil Werli-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/qrcode_activity_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:text="@string/please_scan_device"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/typography_headline2"/>

    <ImageView
        android:id="@+id/qrcode_activity_qr_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/qr_code_description"
        android:minHeight="@dimen/min_qrcode_size"
        android:minWidth="@dimen/min_qrcode_size"
        android:padding="@dimen/activity_vertical_margin"
        android:visibility="gone"/>


</LinearLayout>