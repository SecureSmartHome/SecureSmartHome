<?xml version="1.0" encoding="utf-8"?>
<!--@author Phil Werli-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_weight="0.15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lightButtonTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25sp"
            android:padding="8sp"
            android:text=""
            android:textSize="@dimen/typography_subheadline"/>

        <Button
            android:id="@+id/lightButtonButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_green"
            android:padding="16dp"
            android:text="@string/turn_on"
            android:textSize="14sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/lightButtonImageViewOn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/status_of_light"
        android:padding="20dp"
        android:src="@drawable/ic_light_on"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/lightButtonImageViewOff"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/status_of_light"
        android:padding="20dp"
        android:src="@drawable/ic_light_off"
        android:visibility="visible"/>
</LinearLayout>
