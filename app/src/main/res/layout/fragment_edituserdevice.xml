<?xml version="1.0" encoding="utf-8"?><!--@author Phil Werli-->
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_edit_user"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/userdevice_user_name"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:textSize="@dimen/typography_headline2" />

    <TextView
        android:id="@+id/userdevice_user_group"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:textSize="@dimen/typography_subheadline" />

    <TextView
        android:id="@+id/userdevice_user_deviceid"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:textSize="@dimen/typography_body" />

    <Button
        android:id="@+id/userdevice_edit_button"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/abc_button_padding_horizontal_material"
        android:layout_width="wrap_content"
        android:text="@string/edit"
        android:textSize="@dimen/typography_subheadline"

        />

    <ListView
        android:id="@+id/listUserPermissionContainer"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />
</LinearLayout>
