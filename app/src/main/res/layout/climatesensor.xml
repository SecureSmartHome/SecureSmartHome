<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.unipassau.isl.evs.ssh.app.MainActivity">

    <View
        android:id="@+id/climatesensor_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:background="@color/md_black_1000"
        />

    <TextView
        android:id="@+id/climateSensor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Climate Sensor:"
        android:textSize="@dimen/typography_headline1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorSecondaryText" />


    <TextView
        android:id="@+id/temp1"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="Temperature 1:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/temp2"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="Temperature 2:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="Pressure:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/altitude"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="Altitude:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="Humidity:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/uv"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="UV:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/visible"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="Visible Light:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/ir"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="Infrared:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorSecondaryText" />

</LinearLayout>